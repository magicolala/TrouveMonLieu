{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block stylesheets %}
	<style>
		body {
			background-color: #000;
		}
		.card {
			background-color: #314d4b;
			color: #f4edc7;
		}
		.btn-primary {
			background-color: #9e4f31;
			border-color: #9e4f31;
		}
		.btn-primary:hover {
			background-color: #c68d50;
			border-color: #c68d50;
		}
		.form-control:focus {
			border-color: #7aaaa2;
			box-shadow: 0 0 0 0.2rem rgba(122, 170, 162, 0.25);
		}
		.form-check-input:checked {
			background-color: #9e4f31;
			border-color: #9e4f31;
		}
	</style>
{% endblock %}

{% block body %}
	<section class="vh-100">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-80">
				<div class="col-lg-12 col-xl-11">
					<div class="card text-black mt-3" style="border-radius: 25px;">
						<div class="card-body p-md-0">
							<div class="row justify-content-center">
								<div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1 d-flex align-items-center">
									<div class="w-100">
										<p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Inscription</p>

										{% for flashError in app.flashes('verify_email_error') %}
											<div class="alert alert-danger" role="alert">{{ flashError }}</div>
										{% endfor %}

										{{ form_start(registrationForm, {'attr': {'class': 'mx-1 mx-md-4'}}) }}
										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												{{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
											</div>
										</div>

										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-user fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												{{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
											</div>
										</div>

										<div class="d-flex flex-row align-items-center mb-4">
											<i class="fas fa-lock fa-lg me-3 fa-fw"></i>
											<div class="form-outline flex-fill mb-0">
												{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
											</div>
										</div>

										<div class="form-check d-flex justify-content-center mb-5">
											{{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input me-2'}}) }}
										</div>

										<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
											<button type="submit" class="btn btn-primary btn-lg">S'enregistrer</button>
										</div>
										{{ form_end(registrationForm) }}
									</div>


								</div>
								<div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 p-0">
									<img src="{{asset('assets/img/register.jpeg')}}" class="img-fluid" alt="Sample image">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
