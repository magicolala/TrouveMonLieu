{% extends 'base.html.twig' %}

{% block stylesheets %}
	<style>
		body {
			font-family: Arial, sans-serif;
			background-color: #f8f9fa;
		}

		.container {
			max-width: 800px;
			margin: 0 auto;
			padding: 20px;
		}

		h1 {
			color: #333;
			margin-bottom: 20px;
		}

		.alert {
			padding: 15px;
			margin-bottom: 20px;
			border: 1px solid transparent;
			border-radius: 4px;
		}

		.alert-info {
			color: #0c5460;
			background-color: #d1ecf1;
			border-color: #bee5eb;
		}

		.btn {
			display: inline-block;
			font-weight: 400;
			color: #212529;
			text-align: center;
			vertical-align: middle;
			-webkit-user-select: none;
			-moz-user-select: none;
			-ms-user-select: none;
			user-select: none;
			background-color: transparent;
			border: 1px solid transparent;
			padding: 0.375rem 0.75rem;
			font-size: 1rem;
			line-height: 1.5;
			border-radius: 0.25rem;
			transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
		}

		.btn-primary {
			color: #fff;
			background-color: #007bff;
			border-color: #007bff;
		}

		.btn-primary:hover {
			color: #fff;
			background-color: #0069d9;
			border-color: #0062cc;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Résultat</h1>

		<div class="alert alert-info">
			Votre score est de
			{{ score }}
			points. La distance entre votre devinette et la position réelle est de
			{{ distance|round(2) }}
			kilomètres.
		</div>

		<img src="https://maps.googleapis.com/maps/api/staticmap?size=600x400&markers=color:red%7Clabel:G%7C{{ guessedLatitude }},{{ guessedLongitude }}&markers=color:green%7Clabel:C%7C{{ city.latitude }},{{ city.longitude }}&key={{ app.request.server.get('GOOGLE_MAPS_API_KEY') }}" alt="Distance map" class="map-image">

		<a href="{{ path('app_home') }}" class="btn btn-primary">Rejouer</a>

		<a href="{{ path('app_validate_city', {'cityId': city.id}) }}" class="btn btn-success">Valider</a>

	</div>
{% endblock %}

