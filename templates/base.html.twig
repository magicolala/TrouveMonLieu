<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Trouve Mon Lieu - JEU
			{% endblock %}
		</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			{% include 'partials/_navbar.html.twig' %}
			{% for type, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ type }}" data-dismiss="alert" data-delay="6000">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
			{% block body %}{% endblock %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
			<script>
				document.addEventListener('DOMContentLoaded', function () {
					var alerts = document.querySelectorAll('.alert[data-dismiss="alert"]');
					alerts.forEach(function (alert) {
						var delay = alert.getAttribute('data-delay');
						setTimeout(function () {
							alert.style.display = 'none';
						}, delay);
					});
				});
			</script>
			{% block javascripts %}{% endblock %}
		</body>
	</html>

